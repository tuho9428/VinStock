<%- include("partials/header.ejs") %>

<h1>Dynamic Selection</h1>

<form action="/dailyprice" method="POST">
  <input type="text" name="symbol" placeholder="Enter symbol">
  <button type="submit">Search</button>
</form>

<select id="symbolSelect">
  <% if (content && content.length > 0) {
        content.forEach(function(result) { %>
          <option value="<%= result.symbol %>"><%= result.symbol %>-<%= result.name %></option>
  <%   });
     } else { %>
          <option value="">No results found</option>
  <% } %>
</select>

<script>
  // Get a reference to the select element
  const symbolSelect = document.getElementById('symbolSelect');

  // Add an event listener to the select element
  symbolSelect.addEventListener('change', function() {
    const selectedSymbol = symbolSelect.value;

    // Perform actions based on the selected symbol
    // For example, you can make another API call to retrieve more information about the selected symbol
    console.log('Selected Symbol:', selectedSymbol);
  });
</script>

