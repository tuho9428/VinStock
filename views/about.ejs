<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single Line Chart</title>
    <style>
        canvas {
            max-width: 50%;
            height: auto;
        }
    </style>
</head>
<body>

<canvas id="lineChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Your data array
var data = [10, 12, 12, 14, 16,12, 14, 16,12, 14, 16, 10,11];

// Get the canvas element
var ctx = document.getElementById('lineChart').getContext('2d');

// Create a line chart
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: Array.from({ length: data.length }, (_, i) => i), // Generating labels [1, 2, 3, ...]
        datasets: [{
            label: 'My Line Chart',
            data: data,
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 2,
            fill: false,
            tension: 0.1

        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            x: {
                type: 'linear',
                position: 'bottom',
                
                grid: {
                    display: false,
                }
            },
            y: {
                grid: {
                    display: false
                }
            }
        },
        elements: {
            point: {
                radius: 0
            }
        },
        plugins: {
            tooltip: {
                enabled: true
            }
        }
    }
});

</script>

</body>
</html>
